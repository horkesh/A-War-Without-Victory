{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWWV Asset Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "assets"],
  "properties": {
    "schema_version": { "type": "number" },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "asset_id",
          "family",
          "derived_paths",
          "prompt",
          "generator",
          "params",
          "created_at",
          "sha256_source",
          "sha256_derived"
        ],
        "properties": {
          "asset_id": { "type": "string" },
          "family": { "type": "string", "enum": ["hq", "props", "crests", "papers"] },
          "source_path": { "type": ["string", "null"] },
          "raw_path": { "type": ["string", "null"] },
          "derived_paths": { "type": "array", "items": { "type": "string" } },
          "prompt": { "type": ["string", "null"] },
          "generator": { "type": "string" },
          "params": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "width": { "type": ["number", "null"] },
              "height": { "type": ["number", "null"] },
              "transparent": { "type": ["boolean", "null"] },
              "style_refs": { "type": "array", "items": { "type": "string" } }
            }
          },
          "created_at": { "type": ["string", "null"] },
          "sha256_source": { "type": ["string", "null"] },
          "sha256_derived": { "type": ["string", "null"] },
          "notes": { "type": ["string", "null"] }
        }
      }
    }
  }
}
